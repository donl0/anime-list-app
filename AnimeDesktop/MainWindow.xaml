<Window x:Class="AnimeDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="132px"></RowDefinition>
            <RowDefinition Height="82px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle  Grid.Row="0" Height="132px" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Resources\Pictures\header_bg.png" Stretch="UniformToFill" AlignmentX="Left" AlignmentY="Bottom"/>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="0,5,0,5">
                <Rectangle Height="82" Fill="#FFA701"/>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="auto">
                <Image Source="Resources\Pictures\burger_icon.png"
Width="133" Height="130" Margin="0,-50,0,0"/>
                <TextBlock Width="150px" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                    Burger
                    <LineBreak></LineBreak>
                    Anime
                </TextBlock>

                <Border BorderBrush="Black" BorderThickness="0,5,0,5">
                    <Button Width="180px" Background="#FF8100" BorderBrush="Transparent">
                        <TextBlock Text="Top 100" FontWeight="Bold" FontSize="40"/>
                    </Button>
                </Border>

                <Border Margin="10,0,0,0" BorderBrush="Black" BorderThickness="0,5,0,5">
                    <Button Width="80px" Background="#FF8100" BorderBrush="Transparent">
                        <Image Source="Resources\Pictures\search_icon.png"/>
                    </Button>
                    
                </Border>

                <Border BorderBrush="Black" BorderThickness="0,5,0,5">
                    <Grid Background="#FF8100">
                        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="6" Margin="0,20,10,20" Background="White">
                            <TextBox Width="190px" Margin="2" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </Grid>
                </Border>

                <Border BorderBrush="Black" BorderThickness="0,5,0,5"  Margin="10,0,0,0">
                    <Button Width="auto" Background="#FF8100" BorderBrush="Transparent">
                        <Image Source="Resources\Pictures\folder_icon.png" Margin="20,0,20,0"/>
                    </Button>
                   
                </Border>
                
                <Border BorderBrush="Black" BorderThickness="0,5,0,5">
                    <Grid Background="#FF8100">
                        <Image Source="Resources\Pictures\slidan.jpg" Width="70" Height="70"  Margin="10,0,10,0">
                            <Image.OpacityMask>
                                <VisualBrush Stretch="Fill">
                                    <VisualBrush.Visual>
                                        <Ellipse Width="100" Height="100" Fill="White" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Image.OpacityMask>
                        </Image>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>



        
    </Grid>
</Window>
