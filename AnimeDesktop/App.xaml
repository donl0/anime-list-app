<Application x:Class="AnimeDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnimeDesktop.Init" >
    <Application.Resources>
        <Style TargetType="Button" x:Key="BaseBackgroundButton">
            <Setter Property="Background" Value="#FF8100"/>
        </Style>
        <Style TargetType="Grid" x:Key="BaseBackgroundGrid">
            <Setter Property="Background" Value="#FF8100"/>
        </Style>
    </Application.Resources>
</Application>
